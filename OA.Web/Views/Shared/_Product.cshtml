
@using OA.Web.ViewModels
@model ProductViewModel

<form asp-action="AddProduct" role="form" id="frmInsert">
    <div class="modal-body form-horizontal">
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group">
                    <input type="hidden" id="id" asp-for="Id" />
                    <label asp-for="name" class="col-lg-6 col-sm-3 control-label"></label>
                    <div class="col-lg-6">
                        <input asp-for="name" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="name_en" class="col-lg-6 col-sm-3 control-label"></label>
                    <div class="col-lg-6">
                        <input asp-for="name_en" class="form-control" />
                    </div>
                </div>
            </div>     
        </div>
    </div>
</form>